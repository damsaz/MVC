@model MVC1.Models.Person

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Person Language</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="First_name" class="control-label"></label>
                <input asp-for="First_name" disabled="true" class="form-control" />
                <span asp-validation-for="First_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Last_name"  class="control-label"></label>
                <input asp-for="Last_name" disabled="true" class="form-control" />
                <span asp-validation-for="Last_name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Languages" class="control-label"></label>
                <select asp-for="Languages" class="form-control" asp-items="ViewBag.Language"></select>
                <span asp-validation-for="Languages" class="text-danger"></span>
            </div>
  
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="form-group">


            <label asp-for="Languages" class="control-label"></label>
            @using (@Html.BeginForm("Search", "People"))
            {

                @foreach (var item in Model.Languages)
                {

                    @Html.ActionLink("Remove: "+item.Name, "Delete", new { item.IdLanguage, Model.Id },new {@class = "btn btn-danger btnma" })
                }
            }



        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

